# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/jarvis_ai

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Google Cloud Text-to-Speech Configuration
# Path to the JSON file containing your service account key
GOOGLE_APPLICATION_CREDENTIALS=path/to/your-project-credentials.json

# Microsoft Speech Services Configuration
MICROSOFT_SPEECH_KEY=your_microsoft_speech_key_here
MICROSOFT_SPEECH_REGION=eastus

# Voice Configuration
# Options: google, microsoft, system (uses system's text-to-speech)
TTS_PROVIDER=google

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window
